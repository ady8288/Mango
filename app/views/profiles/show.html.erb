
<%= image_tag @user.gravatar_url, class:"avatarprof" %>


    <div class="page-header">
	<h1 class="prof"><%=  @user.full_name  %></h1>
</div>






<% if @statuses %>
	<% @statuses.each do |status| %>
	<div class="well">
		<span class="statusee"><%= status.user.full_name %></span>
		    </br>
		<span class="statuscontent"><%= status.content %></span>
		    </br>
	    <%= link_to time_ago_in_words(status.created_at) + " ago" %>
	</div>	
  <% end %>
<% end %>  


