<div class="page-header">
<h1>Your Dashboard</h1>
</div>

<% @statuses.each do |status| %>

<div class="status">

<span class="statusee"><%= status.name %></span>

<p><span class="statuscontent"><%= status.content %></span></p>

<div class="meta">

<%= link_to time_ago_in_words(status.created_at) + " ago", status %> 

<span class="admin">

  | <%= link_to "Edit", edit_status_path(status) %> |
  <%= link_to "Delete", status, method: :delete, data: {confirm:"Are you sure that you want to delete this status"} %>

</div>

</div>

<% end %>


