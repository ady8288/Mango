<div class="page-header">
<h1>Sign up</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="alert alert-info">
	  <p class="gravatarinfo">To add a profile picture, you must have a Gravatar account. You can create one <a href="http://bit.ly/1lDidLC"> here</a>. Sign up for Mango with the email that you used for Gravatar.</p>
  </div>

 <%= f.input :first_name %>

 <%= f.input :last_name %>

 <%= f.input :profile_name %>

 <%= f.input :email %>

 <%= f.input :password %>

 <%= f.input :password_confirmation %>

  <div class="form-actions">

  	<%= f.submit "Sign up", class:"btn btn-success" %> 

  </br>

  	<%= render "devise/shared/links" %>

  </div>

<% end %>

